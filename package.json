{
  "name": "esnext-coverage-format-clover",
  "version": "0.0.1",
  "description": "esnext-coverage clover formatter",
  "main": "dist/index.js",
  "keywords": [
    "esnext-coverage",
    "clover",
    "coverage",
    "esnext"
  ],
  "scripts": {
    "prepublish": "babel src --out-dir dist",
    "lint": "eslint --ignore-path .gitignore .",
    "spec": "tape -r esnext-coverage test/spec/*.js",
    "test": "npm run lint && npm run spec"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/esnext-coverage/esnext-coverage-format-clover.git"
  },
  "author": "Oleg Sklyanchuk <sklyanchuk@gmail.com> (http://olegskl.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/esnext-coverage/esnext-coverage-format-clover/issues"
  },
  "homepage": "https://github.com/esnext-coverage/esnext-coverage-format-clover",
  "dependencies": {
    "esnext-coverage-analytics": "^0.0.3",
    "xml-writer": "^1.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-plugin-transform-es2015-destructuring": "^6.9.0",
    "babel-plugin-transform-function-bind": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "eslint": "~3.4.0",
    "eslint-config-meetic": "^2.0.0",
    "esnext-coverage": "^0.0.3",
    "esnext-coverage-format-html": "^0.0.5",
    "esnext-coverage-format-text": "^0.0.4",
    "sinon": "^1.17.5",
    "tape": "^4.6.0"
  },
  "esnextcoverage": {
    "only": "src/*.js",
    "reporters": [
      {
        "formatter": "text",
        "console": true
      },
      {
        "formatter": "html",
        "outFile": "reports/coverage.html"
      }
    ]
  }
}
